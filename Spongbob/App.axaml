<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Spongbob"
             x:Class="Spongbob.App">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Resources>
		<SolidColorBrush x:Key="Primary">#432C7A</SolidColorBrush>
		<SolidColorBrush x:Key="Secondary">#80489C</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryPink">#FF8FB1</SolidColorBrush>
		<SolidColorBrush x:Key="SecondaryPink">#FCE2DB</SolidColorBrush>
		<FontFamily x:Key="Montserrat">
			avares://Spongbob/Assets/Montserrat/Montserrat-Regular.ttf
		</FontFamily>
		<SolidColorBrush x:Key="SliderTrackValueFill">Yellow</SolidColorBrush>
		<SolidColorBrush x:Key="SliderThumbBackground">Yellow</SolidColorBrush>
	</Application.Resources>

	<Application.Styles>
		<FluentTheme Mode="Dark"/>
		<StyleInclude Source="avares://Spongbob/Styles.axaml"/>
	</Application.Styles>
</Application>