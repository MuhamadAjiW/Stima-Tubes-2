<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System"
			 xmlns:local="using:Spongbob"
             x:Class="Spongbob.App">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Resources>
		<SolidColorBrush x:Key="Primary">#432C7A</SolidColorBrush>
		<SolidColorBrush x:Key="Secondary">#80489C</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryPink">#FF8FB1</SolidColorBrush>
		<SolidColorBrush x:Key="SecondaryPink">#FCE2DB</SolidColorBrush>
		<FontFamily x:Key="Montserrat">
			avares://Spongbob/Assets/Montserrat/Montserrat-Regular.ttf
		</FontFamily>
		<SolidColorBrush x:Key="SliderThumbBackgroundPointerOver">#FCE2DB</SolidColorBrush>
		<SolidColorBrush x:Key="SliderThumbBackgroundPressed">#FCE2DB</SolidColorBrush>
		<SolidColorBrush x:Key="SliderTrackValueFill">#FF8FB1</SolidColorBrush>
		<SolidColorBrush x:Key="SliderThumbBackground">#FF8FB1</SolidColorBrush>
		<SolidColorBrush x:Key="SliderTrackValueFillPointerOver">#FF8FB1</SolidColorBrush>
		<SolidColorBrush x:Key="SliderTrackValueFillPressed">#FF8FB1</SolidColorBrush>
		<x:Double x:Key="SliderOutsideTickBarThemeHeight">10</x:Double>
	</Application.Resources>

	<Application.Styles>
		<FluentTheme Mode="Dark"/>
		<StyleInclude Source="avares://Spongbob/Styles.axaml"/>
	</Application.Styles>
</Application>